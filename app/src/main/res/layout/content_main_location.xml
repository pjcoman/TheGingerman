<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main_location"
    tools:context=".MainActivity"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:weightSum="4">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="2dp"
        android:weightSum="2">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/imageButtonLakewood"
            android:layout_weight="1"
            android:src="@drawable/frntlakewood"
            android:scaleType="fitXY"
            android:onClick="lakewood"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/imageButtonUptown"
            android:layout_weight="1"
            android:src="@drawable/frntuptown"
            android:scaleType="fitXY"
            android:onClick="uptown"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="2dp"
        android:weightSum="2">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/imageButtonPlano"
            android:layout_weight="1"
            android:src="@drawable/frntplano"
            android:scaleType="fitXY"
            android:onClick="plano"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/imageButtonSouthlake"
            android:layout_weight="1"
            android:src="@drawable/frntsouthlake"
            android:scaleType="fitXY"
            android:onClick="southlake"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="2dp"
        android:weightSum="2">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/imageButtonFtworth"
            android:layout_weight="1"
            android:src="@drawable/frntftworth"
            android:scaleType="fitXY"
            android:onClick="ftworth"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/imageButtonAustin"
            android:layout_weight="1"
            android:src="@drawable/frntaustin"
            android:scaleType="fitXY"
            android:onClick="austin"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/imageButtonHouston"
            android:src="@drawable/frnthouston"
            android:scaleType="fitXY"
            android:onClick="houston"
            />
    </LinearLayout>

</LinearLayout>
